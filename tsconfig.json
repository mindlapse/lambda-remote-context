{
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "src/**/*.test.ts"],
  
    "compilerOptions": {
      "declaration": true,
      "declarationDir": "./types",
      "target": "es2016",
      "module": "commonjs",
      "rootDirs": ["./src"],
      "resolveJsonModule": true,
      "outDir": "./build",
      "downlevelIteration": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    }
  }
  